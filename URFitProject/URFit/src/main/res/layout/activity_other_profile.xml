<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherProfileActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center"

        >


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top"
            android:orientation ="vertical"
            >
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:background="@drawable/guy" />



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp" >


                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:id="@+id/textView"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="false"
                        android:phoneNumber="false"
                        android:paddingTop="5dp" />
                </TableRow>


                <TableRow
                    android:layout_height="@dimen/row_height"
                    android:layout_width="fill_parent"
                    >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ofirstName"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:singleLine="true"
                        android:hint="First Name"
                        android:textSize="20dp"
                        android:paddingLeft="20dp" />
                </TableRow>

                <TableRow
                    android:layout_height="@dimen/row_height"
                    android:layout_width="fill_parent"
                    >

                    <TextView
                        android:id="@+id/olastName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:singleLine="true"
                        android:hint="Last Name"
                        android:textSize="20dp"
                        android:paddingLeft="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Info:"
                        android:id="@+id/textView"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="false"
                        android:phoneNumber="false"
                        android:paddingTop="20dp" />
                </TableRow>



                <TableRow
                    android:layout_height="@dimen/row_height"
                    android:layout_width="fill_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone:"
                        android:id="@+id/textView"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="false"
                        android:phoneNumber="false"
                        android:paddingTop="5dp" />
                    <TextView
                        android:id="@+id/ouserPhone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:hint="555 555 5555"
                        android:singleLine="true"
                        android:phoneNumber="true"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_height="@dimen/row_height"
                    android:layout_width="fill_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Twitter"
                        android:id="@+id/textView"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="false"
                        android:phoneNumber="false"
                        android:paddingTop="5dp" />
                    <TextView
                        android:id="@+id/ouserTwitter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:singleLine="true"
                        android:hint="\@FirstnameLastname"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_height="@dimen/row_height"
                    android:layout_width="fill_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Facebook"
                        android:id="@+id/textView"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="false"
                        android:phoneNumber="false"
                        android:paddingTop="5dp" />
                    <TextView
                        android:id="@+id/ouserFacebook"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:hint="Link"
                        android:singleLine="true"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_height="@dimen/row_height"
                    android:layout_width="fill_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Experience:"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="false"
                        android:phoneNumber="false"
                        android:paddingTop="20dp"
                        android:paddingBottom="5dp"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cardio"
                        android:id="@+id/cardioXP_button"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_experience"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="true"
                        android:phoneNumber="false"
                        android:paddingTop="20dp"
                        android:paddingBottom="5dp"
                        />

                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weights"
                        android:id="@+id/weightXP_button"
                        android:layout_column="1"
                        />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/weight_experience"
                        android:layout_column="1"
                        android:textSize="20dp"
                        android:textIsSelectable="true"
                        android:singleLine="true"
                        android:phoneNumber="false"
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"
                        />

                </TableRow>





            </TableLayout>

            <TextView
                android:id="@+id/ouser_bio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:layout_weight="1"
                android:layout_column="1"
                android:hint="Bio"
                android:textSize="20dp"
                />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Return to Home"
                android:id="@+id/submit_prof"
                android:layout_column="1"
                android:onClick="submit_prof" />




        </LinearLayout>

    </ScrollView>



</FrameLayout>
