<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardioOptionsActivity"
    tools:ignore="MergeRootFrame">


    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="right|center_vertical"
    android:background="@drawable/newbackround">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="Cardio"
            android:id="@+id/weightlifting"
            android:minWidth="150dp"
            android:textColor="#000000"
            android:onClick="jumpToWeights"
            android:background="@drawable/running"
            android:layout_marginTop="132dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Find a Buddy"
            android:id="@+id/button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:onClick="jumpToFindBuddy" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="My Buddies"
            android:id="@+id/button2"
            android:layout_alignParentLeft="true"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:onClick="jumpToBuddy"
            android:layout_above="@+id/button" />

    </RelativeLayout>
</FrameLayout>