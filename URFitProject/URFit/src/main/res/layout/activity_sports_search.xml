<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SportsSearchActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/newbackround">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Basketball"
            android:id="@+id/button"
            android:layout_marginTop="89dp"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:onClick="jumpToFindBasketball" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Football"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:layout_alignLeft="@+id/button"
            android:onClick="jumpToFindFootball" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Squash"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:onClick="jumpToFindSquash" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Soccer"
            android:id="@+id/button4"
            android:layout_below="@+id/button3"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:layout_alignLeft="@+id/button3"
            android:onClick="jumpToFindSoccer" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Racquetball"
            android:id="@+id/button5"
            android:layout_below="@+id/button4"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:onClick="jumpToFindRaquetball" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Badminton"
            android:id="@+id/button6"
            android:layout_below="@+id/button5"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:onClick="jumpToFindBadminton" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Tennis"
            android:id="@+id/button7"
            android:background="@drawable/abc_ab_bottom_solid_light_holo"
            android:textColor="#000000"
            android:layout_below="@+id/button6"
            android:layout_centerHorizontal="true"
            android:onClick="jumpToFindTennis" />
    </RelativeLayout>
</LinearLayout>
