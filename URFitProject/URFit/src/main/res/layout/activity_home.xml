<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="#636b91">

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="Weights"
            android:id="@+id/weightlifting"
            android:minWidth="150dp"
            android:layout_marginBottom="60dp"
            android:textColor="#ecd3ff"
            android:layout_above="@+id/sports"
            android:layout_centerHorizontal="true"
            android:onClick="jumpToWeights"
            android:background="@drawable/weights" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="Sports"
            android:id="@+id/sports"
            android:minWidth="150dp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/weightlifting" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="Cardio"
            android:minWidth="150dp"
            android:id="@+id/cardio"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/sports"
            android:layout_toRightOf="@+id/weightlifting" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to Buddies"
            android:id="@+id/button"
            android:onClick="jumpToBuddy"
            android:layout_below="@+id/sports"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:textColor="#ffffff" />
    </RelativeLayout>
</FrameLayout>
